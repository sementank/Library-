<Window x:Class="libary.RegistrationWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация читателя" Height="461" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <TextBlock Text="Фамилия:" Margin="5"/>
        <TextBox x:Name="txtLastName" Width="200" Height="25" Margin="5"/>

        <TextBlock Text="Имя:" Margin="5"/>
        <TextBox x:Name="txtFirstName" Width="200" Height="25" Margin="5"/>

        <TextBlock Text="Отчество:" Margin="5"/>
        <TextBox x:Name="txtMiddleName" Width="200" Height="25" Margin="5"/>

        <TextBlock Text="Дата рождения:" Margin="5"/>
        <DatePicker x:Name="dpBirthDate" Width="200" Margin="5"/>

        <TextBlock Text="Номер телефона:" Margin="5"/>
        <TextBox x:Name="txtPhoneNumber" Width="200" Height="25" Margin="5"/>

        <Button x:Name="btnSubmit" Content="Зарегистрироваться" Width="200" Height="35" Margin="10" Click="btnSubmit_Click" />
    </StackPanel>
</Window>
