<Window x:Class="libary.LoginWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="320" Width="400">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="296">
        <TextBlock Text="Имя пользователя:" Margin="5"/>
        <TextBox x:Name="txtUsername" Width="200" Height="25" Margin="5"/>

        <TextBlock Text="Пароль:" Margin="5"/>
        <PasswordBox x:Name="pwdPassword" Width="200" Height="25" Margin="5"/>

        <TextBlock Text="Выберите роль:" Margin="5"/>
        <ComboBox x:Name="cmbRole" Width="200" Height="25" Margin="5">
            <ComboBoxItem Content="Читатель"/>
            <ComboBoxItem Content="Сотрудник библиотеки"/>
        </ComboBox>

        <Button x:Name="btnLogin" Content="Войти" Width="200" Height="35" Margin="10" Click="btnLogin_Click" />
        <Button x:Name="btnRegister" Content="Регистрация" Width="200" Height="35" Margin="10" Click="btnRegister_Click" />

    </StackPanel>
</Window>