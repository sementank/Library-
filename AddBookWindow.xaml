<Window x:Class="libary.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление книги" Height="350" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Название книги:"/>
        <TextBox x:Name="txtTitle" Margin="0,5"/>

        <TextBlock Text="Автор:"/>
        <TextBox x:Name="txtAuthor" Margin="0,5"/>

        <TextBlock Text="Код издания:"/>
        <TextBox x:Name="txtEditionCode" Margin="0,5"/>

        <TextBlock Text="Описание:"/>
        <TextBox x:Name="txtDescription" Margin="0,5" Height="100"/>

        <Button Content="Добавить книгу" Margin="10" Click="AddBook_Click"/>
    </StackPanel>
</Window>